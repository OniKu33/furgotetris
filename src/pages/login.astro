import Layout from "../layouts/Layout.astro";

// L√ìGICA DE SERVIDOR (Igual que antes)
if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const password = data.get("password");

    const passGenin = import.meta.env.PASS_GENIN;
    const passChunin = import.meta.env.PASS_CHUNIN;

    let role = null;

    // Comprobamos la contrase√±a (a√±ado .trim() por si el corrector del m√≥vil mete espacios)
    if (password === passChunin?.trim()) role = "chunin";
    else if (password === passGenin?.trim()) role = "genin";

    if (role) {
      Astro.cookies.set("furgorole", role, {
        path: "/",
        maxAge: 31536000, // 1 a√±o
        httpOnly: true,
        secure: true,
        sameSite: "lax",
      });
      return Astro.redirect("/");
    } else {
      console.error("Password incorrecto");
    }
  } catch (error) {
    console.error(error);
  }
}
