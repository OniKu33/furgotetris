// L√ìGICA DE SERVIDOR (Importante: Sin esto el bot√≥n no hace nada)
if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const password = data.get("password");

    // Leemos las claves del archivo .dev.vars
    const passGenin = import.meta.env.PASS_GENIN;
    const passChunin = import.meta.env.PASS_CHUNIN;

    let role = null;

    // Comprobamos la contrase√±a
    if (password === passChunin) role = "chunin";
    else if (password === passGenin) role = "genin";

    if (role) {
      // Creamos la cookie
      Astro.cookies.set("furgorole", role, {
        path: "/",
        maxAge: 31536000, // 1 a√±o
        httpOnly: true,
        secure: true,
        sameSite: "lax",
      });
      return Astro.redirect("/");
    } else {
      console.error("Password incorrecto");
    }
  } catch (error) {
    console.error(error);
  }
}
